                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/spanish"
                        android:textColor="@color/colorFontTitle" />
                </LinearLayout>

                <LinearLayout
